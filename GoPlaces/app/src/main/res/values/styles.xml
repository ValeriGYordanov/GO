<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlackLighter</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/app_background</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:buttonTint">@color/colorWhite</item>
        <item name="android:layout_margin">@dimen/min_view_distance</item>
    </style>

    <style name="NoBackgroundThemeDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="OnboardButtonStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/min_view_distance</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/enabled_rectangle_button_for_white_background</item>
        <item name="android:padding">@dimen/mid_view_distance</item>
    </style>

    <style name="ButtonMainMenuStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:background">@drawable/enabled_square_button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">40dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
