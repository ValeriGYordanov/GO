<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlackLighter</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:buttonTint">@color/colorWhite</item>
        <item name="android:layout_margin">@dimen/min_view_distance</item>
    </style>

    <style name="NoBackgroundThemeDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
